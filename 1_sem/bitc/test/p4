void is_palindrome(char s[100]){
	int plen = 0;
	char p[100];
	
	// mai intai fac un nou string p, care e la fel ca s, doar ca fara spatii, si cu literele mari facute mici
	for(int i = 0; s[i] != '\0'; ++i){
		char c = s[i];
		if(c == ' ')continue;
		
		if(c >= 'A' && c <= 'Z'){
			c -= 'A';
			c += 'a';
		}
		
		p[plen] = c;
		plen++;
	}
	
	// apoi verific daca p este palindrom, comparand caracterele lui din ambele directii
	// daca cumva doua dintre caractere sunt diferite, atunci nu e palindromm
	int ispal = 1;
	int i = 0, j = plen-1;
	while(i < j && ispal){
		if(p[i] != p[j]){
			ispal = 0;
		}
		i++;
		j--;
	}
	
	if(ispal){
		printf("Propozitia este palindroma!");
	}else{
		printf("Propozitia nu este palindroma!");
	}
}